{% extends "VideothequeBundle::layout.html.twig" %}

{% block title %} {{ parent() }} {% endblock %}

{% block body %}

	<div class="row">
		<div class="col s6 offset-s3"><br>
		   <nav>
		    <div class="nav-wrapper">
		      <form action="{{ path('videotheque_search_movies') }}" method="POST">
		        <div class="input-field">
		          <input id="search" type="search" class="autocomplete" name="query" placeholder="Rechercher par (catÃ©gorie, titre)" required="">
		          <label for="search"><i class="material-icons">search</i></label>
		          <i class="material-icons">close</i>
		        </div>
		      </form>
		    </div>
		  </nav>
		</div>
	</div>

	<div class="row">
		{% for item in movies %}
			<div class="col s12 m4">
		    <div class="card horizontal">
		      <div class="card-image c-img">
		        <img src="{{ item.image }} ">
		      </div>
		      <div class="card-stacked">
		        <div class="card-content">
		          <span class="card-title activator grey-text text-darken-4">{{ item.title }}</span>
			      <p><a href="#">{{item.categories.name}}</a></p>
		        </div>
		        <div class="card-action">
		          <a href="{{ path('videotheque_movies_show', {'cat': item.categories.name, 'title': item.title , 'id': item.id}) }}">Voir plus</a>
		        </div>
		      </div>
		    </div>
		  </div>
		{% endfor %}
	</div>


{% endblock  %}

