{% extends "VideothequeBundle::layout.html.twig" %}

{% block title %} {{ parent() }} | {{ movie.title }}{% endblock %}

{% block body %}
	
	<div class="row">
		<div class="row">
        <div class="col s12 m8 offset-m2">
          <div class="card">
            <div class="card-image">
              <img src="{{ movie.image }}">              
            </div>
            <div class="card-content">
            	<span class="card-title">{{ movie.title }} ({{ movie.createdAt|date('Y') }})</span>
              <p>{{movie.description}}.</p>
            </div>
            <div class="card-action">
               <a href="{{ path('videotheque_movies_update', {'id': movie.id}) }}">Modifier</a>
		          <a href="{{ path('videotheque_movies_destroy', {'id': movie.id}) }}" onclick="return confirm('Vous etez sur?')">Supprimer</a>
            </div>
          </div>
        </div>
      </div>
	</div>


{% endblock  %}

